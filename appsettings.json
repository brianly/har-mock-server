{
    "AllowedHosts": "*",
    "ApiUrl": "https://api.server.com/",
    "HarsFolder": "HARS",
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args:Formatter": {
                    "Type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                    "Template": "[{@t:HH:mm:ss} {@l:w4} {SourceContext}] {@m}\n{@x}",
                    "Theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
                }
            }
        ]
    }
}
